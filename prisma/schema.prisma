generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql" // XAMPPの場合
  url      = env("DATABASE_URL")
}

model User {
  id        String      @id @default(uuid())
  name      String?
  email     String      @unique
  portfolios Portfolio[]
}

model Portfolio {
  id          String   @id @default(uuid())
  userId      String
  name        String
  university  String
  faculty     String
  grade       String
  email       String
  phone       String
  address     String
  selfIntroduction String
  skillTags   String   // JSON文字列で保存
  certifications String
  projects    String   // JSON文字列で保存
  experience  String   // JSON文字列で保存
  other       String   // JSON文字列で保存
  publication String   // JSON文字列で保存
  visibilitySettings String // JSON文字列で保存
  user        User     @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
}